<!-- app/views/places/new.html.erb -->

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          New Place
        </div>
        <div class="card-body">
          <%= form_with(model: @place, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control', required: true %>
            </div>
            <div class="form-group">
              <%= form.submit "Create Place", class: 'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

