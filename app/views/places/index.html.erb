<%# app/views/places/index.html.erb %>
<% if user_signed_in? %>
  <h1>Places</h1>
  <ul>
    <% @places.each do |place| %>
      <li><%= link_to place.name, place_path(place) %></li>
    <% end %>
  </ul>

  <%= link_to 'New Place', new_place_path, class: 'btn btn-primary' %>
<% else %>
  <h1>Welcome to TacoGram</h1>
  <%= link_to 'Login', login_path, class: 'btn btn-primary' %>
  <%= link_to 'Sign Up', new_user_path, class: 'btn btn-primary' %>
<% end %>

