<!-- app/views/sessions/new.html.erb -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          Login
        </div>
        <div class="card-body">
          <%= form_with(scope: :session, url: login_path, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: 'form-control', placeholder: "Enter email" %>
            </div>
            <div class="form-group">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control', placeholder: "Enter password" %>
            </div>
            <div class="form-group">
              <%= form.submit "Login", class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= link_to 'Signup', new_user_path, class: 'btn btn-link' %>
        </div>
      </div>
    </div>
  </div>
</

